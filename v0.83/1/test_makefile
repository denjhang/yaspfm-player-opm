# Compiler
CXX = g++

# Paths
FTDI_INC_PATH = ftdi_driver
FTDI_LIB_PATH = $(FTDI_INC_PATH)/amd64

# Compiler flags
CXXFLAGS = -m64 -Wall -Wextra -g -I$(FTDI_INC_PATH)

# Linker flags
LDFLAGS = -m64 $(FTDI_LIB_PATH)/libftd2xx.a -luser32 -lgdi32 -lws2_32 -lcomdlg32 -ladvapi32 -lsetupapi

# Target executable
TARGET = com_test.exe

# Source files
SRCS = com_test.cpp

# Object files
OBJS = $(SRCS:.cpp=.o)

# Default rule
all: $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) $^ -o $(TARGET) $(LDFLAGS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)
